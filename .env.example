# Database
DATABASE_URL="file:./dev.db"

# JWT Secret for authentication (Generate a secure random string)
JWT_SECRET="your-jwt-secret-key-here"

# NextAuth (Generate a secure random string)
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Development settings
NODE_ENV="development"

# API Settings
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Device Registration (Generate a secure random string)
DEVICE_REGISTRATION_KEY="your-device-key-here"

# Cloud Configuration
CLOUD_SERVER_URL="https://api.cvtigaputraperkasa.id"
CLOUD_API_KEY="your-cloud-api-key-here"
SYNC_INTERVAL="300"
RETRY_ATTEMPTS="3"
TIMEOUT="30000"

# Logging
LOG_LEVEL="info"

